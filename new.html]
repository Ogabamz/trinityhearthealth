  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const formContainer = document.getElementById('formContainer');

      // Load the form dynamically for better maintainability
      fetch('assessment-form.html')
        .then(response => response.text())
        .then(html => {
          formContainer.innerHTML = html;
          const submitBtn = document.getElementById('submitBtn');
          const assessmentQuestions = document.getElementById('assessmentQuestions');
          const pastorInfoSection = document.getElementById('pastorInfoSection');

          // --- Core Logic ---
          submitBtn.addEventListener('click', function() {
            const selects = assessmentQuestions.querySelectorAll('select[name^="q"]');
            let allAnswered = true;
            for (let select of selects) {
              if (!select.value) {
                allAnswered = false;
                select.classList.add('border-red-500');
              } else {
                select.classList.remove('border-red-500');
              }
            }

            if (!allAnswered) {
              alert('Please answer all questions before submitting.');
              return;
            }

            for (let i = 1; i <= 20; i++) {
              const questionSelect = document.querySelector(`select[name="q${i}"]`);
              const hiddenField = document.getElementById(`hidden_q${i}`);
              if (questionSelect && hiddenField) {
                hiddenField.value = questionSelect.value;
              }
            }

            assessmentQuestions.style.display = 'none';
            pastorInfoSection.style.display = 'block';
            pastorInfoSection.scrollIntoView({ behavior: 'smooth' });
          });

          pastorInfoSection.addEventListener('submit', function(e) {
            e.preventDefault();
            window.location.href = 'post-submission.html';
          });
        })
        .catch(err => {
          formContainer.innerHTML = `<p class='text-red-600'>Error loading form. Please refresh the page.</p>`;
          console.error(err);
        });
    });
  </script>
</body>
</html>
